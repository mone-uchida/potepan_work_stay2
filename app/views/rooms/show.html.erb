<div class="main show">
 <%= image_tag "/room_images/#{@room.image_name}" %>
  <div class="room-show">
   <div class="room-name">
     <%= @room.name %>
   </div>
   <div class="room-address">
     <%= @room.address %>
   </div>
   <div class="room-introduction">
     <%= @room.introduction %>
   </div>
  </div>
   <div class="reserve"> 
   <h4>予約フォーム</h4>  
   <p>料金　<%= @room.price %>円/日　</p>
    <%= form_with url:"/#{@room.id}/reserve", method: :post do |f| %>
      <table>
        <tr>
          <th><%= f.label :start_at ,"開始日" %></th>
          <td><%= f.date_field :start_at  %></td>
        </tr>
 
        <tr>
          <th><%= f.label :finish_at ,"終了日" %></th>
          <td><%= f.date_field :finish_at %></td>
        </tr>
 
        <tr>
          <th><%= f.label :people ,"人数" %></th>
          <td><%= f.number_field :people %></td>
        </tr>

      </table>
 
      <div>
        <ul>
          <li><%= f.submit "予約する"%></li>
        </ul>
      </div>
    <% end %>
    </div>