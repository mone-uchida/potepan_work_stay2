<div class="main new">
 <h3>新しいアカウントを作成</h3>
  <div class="new-item"> 
    <%= form_with model: @user do |f| %>
      <table>
        <tr>
          <th><%= f.label :name ,"名前" %></th>
          <td><%= f.text_field :name %></td>
        </tr>
 
        <tr>
          <th><%= f.label :email ,"メールアドレス" %></th>
          <td><%= f.text_field :email %></td>
        </tr>
 
        <tr>
          <th><%= f.label :password_digest ,"パスワード" %></th>
          <td><%= f.text_field :password_digest %></td>
        </tr>

      </table>
 
      <div>
        <ul>
          <li><%= f.submit "アカウントを作成"%></li>
          <li><%= link_to "アカウントをお持ちの方はこちら","/users/login" %></li>
        </ul>
      </div>
    <% end %>
  </div>
</div>