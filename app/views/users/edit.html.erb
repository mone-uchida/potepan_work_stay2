<div class="main edit">
 <h3>設定</h3>
   <div class="edit-item">
    <%= form_with url:user_path(@user), multipart: true, method: :patch do |f| %>
      <table>
        <tr>
          <th><%= f.label :name ,"名前" %></th>
          <td><%= f.text_field :name, value: @user.name %></td>
        </tr>
 
        <tr>
          <th><%= f.label :image ,"ユーザー画像" %></th>
          <td><%= f.file_field :image %></td>
        </tr>
 
        <tr>
          <th><%= f.label :introduction ,"自己紹介" %></th>
          <td><%= f.text_field :introduction, value: @user.introduction %></td>
        </tr>

      </table>
 
      <div>
        <ul>
          <li><%= f.submit "変更した内容を保存する"%></li>
        </ul>
      </div>

    <% end %>
  </div>  
</div>